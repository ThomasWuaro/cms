{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}

	{% form_theme form 'form/form.html.twig' %}

    <h1>Edit User</h1>

<div class="custom-form">
    {{ form_start(form) }}
    <div class="container">
    	<div class="row">
    		<div class="col-6">

    			{{ form_row(form.username) }}
    			{{ form_row(form.email) }}
    			{{ form_row(form.firstname) }}
    			{{ form_row(form.lastname) }}

    		</div>
    		<div class="col-6">

    			{{ form_row(form.image) }}

    		</div>
    	</div>
    </div>

<div class="form-actions">

		<button class="btn btn-primary"><i class="fas fa-check"></i> {{ button_label|default('Save') }}</button>

		<a href="{{path('admin.profile')}}">Back to profile</a>
</div>
	{{ form_end(form) }}
</div>

{% endblock %}