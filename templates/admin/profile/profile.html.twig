{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}

    {% set _avatar_image_path = easyadmin_read_property(app.user, easyadmin_config('user.avatar_property_path')) %}

        <div class="container">
            <h1>Profile</h1>
            <div class="row">
                <div class="col-10">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th>Firstname</th>
                                <td>{{ user.firstname }}</td>
                            </tr>
                            <tr>
                                <th>Lastname</th>
                                <td>{{ user.lastname }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="col-2">
                    {% if null == _avatar_image_path or null == _avatar_image_path.imageName %}
                      <i class="fa fa-fw {{ app.user is not null ? 'fa-user-circle' : 'fa-user-times' }} avatar-circle"></i>
                  {% else %}
                    <img class="avatar-circle" src ="{{ vich_uploader_asset( user.image, 'imageFile') | imagine_filter('profile_show') }}">
                {% endif %}
            </div>       
        </div>
    </div>

    <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('admin.profile.edit') }}"><i class="fas fa-edit"></i> edit</a>
    </div>

{% endblock %}
