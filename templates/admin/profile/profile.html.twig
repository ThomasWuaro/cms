{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}

    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="avatar-circle" src ="{{ vich_uploader_asset( user.image, 'imageFile') | imagine_filter('profile_show') }}"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('admin.profile.edit') }}">edit</a>

{% endblock %}
